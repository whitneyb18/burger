<div class="row">
    <h1>Burgers</h1>
</div>

<div class="row">
    <div class="col-lg-6">
        <h2>Burgers that are not eaten</h2>
        <div class="burger">

            <ul>
                {{#each burgers}}
                {{#unless eaten}}
                {{> burgers/burgers-block eaten=true}}
                {{/unless}}
                {{/each}}
            </ul>

        </div>

    </div>
    <div class="col-lg-6">
        <div class="burger">
            <h2>Burgers that have been eaten</h2>

            <ul>
                {{#each burgers}}
                {{#if eaten}}
                {{> burgers/burgers-block eaten=false}}
                {{/if}}
                {{/each}}
            </ul>

        </div>

    </div>

</div>

<div class="row">
    <div class="container">
        <h2>Add a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
            </div>

            <div class="form-group">
                <label for="eaten">Has it been eaten?</label><br>
                <input type="radio" name="eaten" value="1" checked> Yes<br>
                <input type="radio" name="eaten" value="0"> No
            </div>

            <button class="btn btn-success" type="submit">Add Burger</button>
        </form>
    </div>
</div>